server {
    listen 0.0.0.0:80 default_server;
    listen [::]:80 default_server;

    server_name _;
    root /var/www/html;
    location = / {
        return 404;
    }
    location ^~ /.well-known/ {
        root /var/www/html/.well-known/;
        allow all;
    }
    location / {
        try_files $uri $uri/ =404;
    }
    error_page 404 /404.html;
    location = /404.html {
        internal;
    }
}
